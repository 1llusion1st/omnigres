-- Specifying headers
select
    omni_httpd.http_response(headers => array [omni_http.http_header('test', 'value')]::omni_http.http_header[],
                             body => null);
                     http_response                     
-------------------------------------------------------
 omni_httpd.http_response((,200,"{""(test,value)""}"))
(1 row)

-- Merging headers with inferred ones
select
    omni_httpd.http_response(headers => array [omni_http.http_header('test', 'value')]::omni_http.http_header[],
                             body => 'test');
                                                      http_response                                                      
-------------------------------------------------------------------------------------------------------------------------
 omni_httpd.http_response(("\\x74657374",200,"{""(test,value)"",""(content-type,\\""text/plain; charset=utf-8\\"")""}"))
(1 row)

